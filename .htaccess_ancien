RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]+)/$ $1.php
RewriteRule ^([^/]+)/([^/]+)/$ /$1/$2.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !(\.[a-zA-Z0-9]{1,5}|/)$
RewriteCond %{SCRIPT_FILENAME} !-d
RewriteCond %{SCRIPT_FILENAME} !-f
RewriteRule (.*)$ /$1/ [R=301,L]
RewriteRule membre/([0-9]+) /index.php?page=membreIndividuel&idMembre=$1 [QSA]
RewriteRule article/([a-zA-Z0-9\-]+)-([0-9]+) /index.php?page=articleIndividuel&idArticle=$2
RewriteRule le-blog /index.php?page=lesArticles [QSA]
RewriteRule inscription /index.php?page=inscription
RewriteRule connexion /index.php?page=connexion
RewriteRule profil /index.php?page=profil
RewriteRule erreur/([0-9]+) /index.php?page=erreur&erreur=$1
ErrorDocument 400 /index.php?page=erreur&erreur=400
ErrorDocument 401 /index.php?page=erreur&erreur=401
ErrorDocument 402 /index.php?page=erreur&erreur=402
ErrorDocument 403 /index.php?page=erreur&erreur=403
ErrorDocument 404 /index.php?page=erreur&erreur=404
ErrorDocument 405 /index.php?page=erreur&erreur=405
ErrorDocument 500 /index.php?page=erreur&erreur=500
ErrorDocument 501 /index.php?page=erreur&erreur=501
ErrorDocument 502 /index.php?page=erreur&erreur=502
ErrorDocument 503 /index.php?page=erreur&erreur=503
ErrorDocument 504 /index.php?page=erreur&erreur=504
ErrorDocument 505 /index.php?page=erreur&erreur=505

